# ============================================================================
# Flavatix Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ============================================================================
# APPLICATION CONFIG
# ============================================================================
NEXT_PUBLIC_APP_NAME=Flavatix
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Log level: debug, info, warn, error (default: debug in dev, error in prod)
NEXT_PUBLIC_LOG_LEVEL=debug

# ============================================================================
# SUPABASE CONFIG (Required)
# ============================================================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key - ONLY use on server-side, never expose to client
# Get from Supabase project settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# AI / LLM CONFIG (Required for flavor extraction features)
# ============================================================================
# Anthropic API key for Claude AI
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API key (alternative/fallback)
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# AUTHENTICATION CONFIG
# ============================================================================
# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# OAuth providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# EMAIL CONFIG (Optional - for notifications)
# ============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@flavatix.com

# ============================================================================
# FILE STORAGE CONFIG (Optional - defaults to Supabase Storage)
# ============================================================================
# Cloudinary (alternative to Supabase Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================================================
# ANALYTICS & MONITORING (Optional)
# ============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# FEATURE FLAGS (Optional - defaults in lib/constants.ts)
# ============================================================================
# NEXT_PUBLIC_FEATURE_AI_DESCRIPTORS=true
# NEXT_PUBLIC_FEATURE_SOCIAL=true
# NEXT_PUBLIC_FEATURE_COMPETITION=true
# NEXT_PUBLIC_FEATURE_STUDY_MODE=true
# NEXT_PUBLIC_FEATURE_PDF_EXPORT=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
NODE_ENV=development

# Enable debug mode for additional logging
DEBUG=false

# Skip auth for local development (NEVER enable in production)
# SKIP_AUTH=false