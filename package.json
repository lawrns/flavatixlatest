{
  "name": "flavorwheel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "security-audit": "npm audit --audit-level=moderate",
    "check": "npm run lint && npm run type-check && npm run test:unit",
    "check:all": "npm run lint && npm run type-check && npm run test:all",
    "setup": "bash setup.sh",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.66.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@sentry/nextjs": "^10.30.0",
    "@sentry/react": "^10.30.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.90.10",
    "@types/d3": "^7.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.13",
    "html2canvas": "^1.4.1",
    "i18next": "^25.7.3",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.544.0",
    "nanoid": "^5.1.6",
    "next": "14.0.4",
    "next-i18next": "^15.4.3",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "playwright": "^1.55.1",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^16.5.0",
    "react-router-dom": "^7.9.1",
    "react-toastify": "^11.0.5",
    "recharts": "^3.5.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@netlify/plugin-nextjs": "^5.15.5",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "dotenv": "^17.2.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "netlify-cli": "^23.9.1",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8",
    "prettier": "^3.8.0",
    "puppeteer": "^24.22.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vercel": "^48.2.9"
  }
}
